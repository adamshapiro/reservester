<h1>All Restaurants</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
		<th>Address</th>
		<th>City</th>
		<th>State</th>
		<th>Zipcode</th>
		<th>Phone</th>
	</tr>

	<% @restaurants.each do |restaurant| %>
	<tr>
		<td><%= restaurant.name %></td>
		<td><%= restaurant.description %></td>
		<td><%= restaurant.address %></td>
		<td><%= restaurant.city %></td>
		<td><%= restaurant.state %></td>
		<td><%= restaurant.zipcode %></td>
		<td><%= restaurant.phone %></td>
		<td><%= link_to 'Show', restaurant_path(restaurant) %></td>
		<td><%= link_to 'Delete', restaurant_path(restaurant), method: :delete %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'New Restaurant', new_restaurant_path %>

<% restaurants_locations = "" %>
<% @restaurants.each do |restaurant| %>
<% if restaurant == @restaurants[0] %>
<% restaurants_locations +="#{restaurant.address.gsub(" ","+")}+#{restaurant.city}+#{restaurant.state}" %>
<% else %>
<% restaurants_locations +="|#{restaurant.address.gsub(" ","+")}+#{restaurant.city}+#{restaurant.state}" %>
<% end %>
<% end %>

<p><img src="https://maps.googleapis.com/maps/api/staticmap?size=400x400&markers=<%= restaurants_locations %>&key=AIzaSyBwzq71n1sEb3jFlUFPesxYNBIuR3Zqw4g"></p>
